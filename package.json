{
  "name": "jest-utils",
  "version": "0.0.1",
  "description": "Comprehensive Jest utilities for test reporting, flaky test detection, and memory leak detection",
  "author": "Lars Magnus Klavenes <larsmagnus@gmail.com> (https://larsmagnus.co)",
  "funding": "https://larsmagnus.co/donate",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsmagnus/jest-utils.git"
  },
  "bugs": {
    "url": "https://github.com/larsmagnus/jest-utils/issues"
  },
  "homepage": "https://larsmagnus.co",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:client": "jest --selectProjects client",
    "test:server": "jest --selectProjects server",
    "test:performance": "node src/performance-analysis.ts",
    "test:performance:cpu": "node src/performance-analysis.ts --cpu-only --flamegraph",
    "test:performance:memory": "node src/performance-analysis.ts --memory-only",
    "test:performance:watch": "node src/performance-analysis.ts --watch",
    "test:performance:open": "node src/performance-analysis.ts --open",
    "test:performance:compare": "node src/performance-analysis.ts --compare",
    "lint": "oxlint --fix && prettier . --write"
  },
  "keywords": [
    "jest",
    "testing",
    "reporter",
    "flaky-tests",
    "memory-leaks",
    "test-utilities",
    "debugging",
    "test-analysis"
  ],
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "oxlint": "^1.6.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/reporters/*": ["src/reporters/*"]
    }
  },
  "include": [
    "src/**/*",
    "jest.config.ts",
    "jest.config.memory.ts",
    "jest.config.performance.ts",
    "jest.setup.memory.ts",
    "**/*.test.ts",
    "**/*.test.js"
  ],
  "exclude": ["node_modules", "dist", "reports"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
